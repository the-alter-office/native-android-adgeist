<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Android!"
        android:textSize="18sp" />

    <Button
        android:id="@+id/triggerNetworkCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Network Call"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/statusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Consent Status"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/consentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Consent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/setUserDetailsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set User Details"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/logEventBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Event"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/trackImpressionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Impression"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/trackViewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track View"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/trackClickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Click"
        android:layout_marginTop="16dp" />

</LinearLayout>